@model IEnumerable<DGM_Checkout_dev.Models.Rental>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RentalName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RentalCheckoutDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RentalDueDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RentalReturnDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RentalNotes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RentalLateFee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RentalLateFeePaid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RentalLocation)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RentalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalCheckoutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalDueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalLateFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalLateFeePaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UVID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RentalID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RentalID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RentalID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
